<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryPostActivity">
    <RelativeLayout
        android:id="@+id/bar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/my_primary"
        >
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="Đăng bài"
            android:layout_toEndOf="@id/back_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:drawableRight="@drawable/baseline_done_24"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Đăng"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/bar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <EditText
                android:id="@+id/writeStoryPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top|start"
                android:hint="Bạn đang nghĩ gì?"
                android:inputType="text|textMultiLine"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:paddingBottom="20dp"
                android:autofillHints="10sp" />
            <LinearLayout
                android:id="@+id/mediaLayout"
                android:layout_below="@id/writeStoryPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/imageBackgroundCardView"
                    android:layout_width="match_parent"
                    android:layout_height="545dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:cardCornerRadius="0dp">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:src="@drawable/anhbia1"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/videoBackgroundCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    app:cardCornerRadius="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <VideoView
                            android:id="@+id/videoViewStory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                        />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/my_primary"
        android:src="@drawable/imagepost"
        app:tint="@color/white" />


</RelativeLayout>